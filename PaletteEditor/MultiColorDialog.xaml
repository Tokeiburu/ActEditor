<Styles:TkWindow x:Class="PaletteEditor.MultiColorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:PaletteEditor="clr-namespace:PaletteEditor"
              xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary" mc:Ignorable="d"
             MaxHeight="380" MinHeight="380" MaxWidth="840" MinWidth="840" Title="Palette edit">
    <Grid>
        <TabControl Name="_mainTabControl">
            <TabItem Header="Single edit">
                <PaletteEditor:SingleColorEditControl x:Name="_sce" />
            </TabItem>
            <TabItem Header="Gradient edit">
                <PaletteEditor:GradientColorEditControl x:Name="_gceControl" />
            </TabItem>
            <TabItem Header="Adjust color edit">
                <PaletteEditor:AdjustColorControl x:Name="_accControl" />
            </TabItem>
        </TabControl>
    </Grid>
</Styles:TkWindow>
