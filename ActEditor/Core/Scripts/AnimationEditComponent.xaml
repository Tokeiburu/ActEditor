<UserControl x:Class="ActEditor.Core.Scripts.AnimationEditComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActEditor.Core.Scripts" xmlns:interactioncomponent="clr-namespace:ActEditor.Core.WPF.InteractionComponent" xmlns:wpf="clr-namespace:TokeiLibrary.WPF;assembly=TokeiLibrary"
			 mc:Ignorable="d" Width="370" HorizontalAlignment="Left" >
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.IsSharedSizeScope="True">
			<Grid Name="_gridAnimation">
				<Grid.ColumnDefinitions>
					<ColumnDefinition SharedSizeGroup="C0" Width="auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock Text="Animations" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="3 0 3 0" />
				<WrapPanel Name="_wpAnimations" Grid.Column="1" />
			</Grid>
			<Rectangle Height="2" />
			<Grid Name="_gridLayers">
				<Grid.ColumnDefinitions>
					<ColumnDefinition SharedSizeGroup="C0" Width="auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock Text="Layers" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="3 0 3 0" />
				<WrapPanel Name="_wpLayers" Grid.Column="1" />
			</Grid>
			<Rectangle Height="2" />
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition SharedSizeGroup="C0" Width="auto" />
					<ColumnDefinition Width="90" />
					<ColumnDefinition Width="50" />
					<ColumnDefinition Width="90" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBlock Name="_tblockLength"  Text="Length" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="3 0 3 0" />
				<interactioncomponent:IntTextBoxEdit x:Name="_tbLength" Grid.Column="1" />
				<TextBlock Name="_tblockStart"  Grid.Column="2" Text="Start" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="3 0 3 0" />
				<interactioncomponent:IntTextBoxEdit x:Name="_tbStart" Grid.Column="3" />
			</Grid>
			<Rectangle Height="2" />
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition SharedSizeGroup="C0" Width="auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<DockPanel Grid.Column="1">
					<CheckBox x:Name="_cbLoop" Content="Loop missing frames" Margin="1" VerticalAlignment="Center" VerticalContentAlignment="Center" />
					<CheckBox x:Name="_cbEmptyFrame" Grid.Column="1" Content="Add empty frame" Margin="8 1 1 1" VerticalAlignment="Center" VerticalContentAlignment="Center" />
				</DockPanel>
			</Grid>
			<Rectangle Height="10" />
		</StackPanel>
	</Grid>
</UserControl>
