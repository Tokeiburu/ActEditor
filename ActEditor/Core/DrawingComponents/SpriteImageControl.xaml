<UserControl x:Class="ActEditor.Core.DrawingComponents.SpriteImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActEditor.Core.DrawingComponents"
             mc:Ignorable="d" >
    <Border x:Name="_borderEvents" BorderThickness="1" SnapsToDevicePixels="True">
		<Grid>
		    <Image x:Name="_image" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" />
			<TextBlock Text="{Binding SpriteIndex, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="13" IsHitTestVisible="False" Foreground="White">
				<TextBlock.Effect>
					<BlurEffect />
				</TextBlock.Effect>
			</TextBlock>
			<TextBlock Text="{Binding SpriteIndex, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="13" IsHitTestVisible="False" />
			<Rectangle x:Name="_overlay" IsHitTestVisible="False" Fill="Transparent" />
		</Grid>
	</Border>
</UserControl>
