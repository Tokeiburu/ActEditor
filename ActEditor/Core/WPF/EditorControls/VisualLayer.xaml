<UserControl x:Class="ActEditor.Core.WPF.EditorControls.VisualLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:GenericControls="clr-namespace:ActEditor.Core.WPF.GenericControls" mc:Ignorable="d">
	<UniformGrid x:Name="_grid" Background="{DynamicResource UIThemeTextBoxBackgroundBrush}" Height="17" Columns="9" SnapsToDevicePixels="True" UseLayoutRounding="True" >
		<UniformGrid.Resources>
			<Style TargetType="Border">
				<Setter Property="BorderBrush" Value="{DynamicResource UIGridBackgroundBrush}" />
				<Setter Property="BorderThickness" Value="0,0,1,1" />
			</Style>
			<Style TargetType="TextBlock">
				<Setter Property="Padding" Value="2 0 2 0" />
				<Setter Property="Margin" Value="0" />
				<Setter Property="TextAlignment" Value="Right" />
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Cursor" Value="IBeam" />
			</Style>
		</UniformGrid.Resources>
		<Border x:Name="_borderLayerId">
            <TextBlock Padding="0 0 3 0" x:Name="_tbLayerId" Cursor="Arrow" />
		</Border>
		<Border x:Name="_borderSpriteId">
			<TextBlock Name="_tbSpriteNumber" />
		</Border>
		<Border>
			<TextBlock Name="_tbOffsetX" />
		</Border>
		<Border>
			<TextBlock Name="_tbOffsetY" />
		</Border>
		<Border>
			<CheckBox FocusVisualStyle="{x:Null}" Name="_cbMirror" HorizontalAlignment="Center" VerticalAlignment="Center" />
		</Border>
		<Border>
			<GenericControls:LayerColorSelector x:Name="_color" />
		</Border>
		<Border>
			<TextBlock Name="_tbScaleX" />
		</Border>
		<Border>
			<TextBlock Name="_tbScaleY" />
		</Border>
		<Border>
			<TextBlock Name="_tbRotation" />
		</Border>
    </UniformGrid>
</UserControl>
