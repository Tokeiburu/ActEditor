<UserControl x:Class="ActEditor.Core.WPF.EditorControls.LayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:GenericControls="clr-namespace:ActEditor.Core.WPF.GenericControls" mc:Ignorable="d">
	<UniformGrid x:Name="_grid" Background="{DynamicResource UIThemeTextBoxBackgroundBrush}" Height="17" Columns="7" SnapsToDevicePixels="True" UseLayoutRounding="True" >
		<UniformGrid.Resources>
			<Style TargetType="Border">
				<Setter Property="BorderBrush" Value="{DynamicResource UIGridBackgroundBrush}" />
				<Setter Property="BorderThickness" Value="0,0,1,1" />
			</Style>
		</UniformGrid.Resources>
		<Border>
		    <GenericControls:ClickSelectTextBox2 TextAlignment="Right" x:Name="_tbOffsetX" Background="Transparent" />
		</Border>
		<Border>
            <GenericControls:ClickSelectTextBox2 TextAlignment="Right" x:Name="_tbOffsetY" Background="Transparent" />
		</Border>
		<Border>
			<CheckBox FocusVisualStyle="{x:Null}" Name="_cbMirror" HorizontalAlignment="Center" VerticalAlignment="Center" />
		</Border>
		<Border>
			<GenericControls:LayerColorSelector x:Name="_color" />
		</Border>
		<Border>
			<GenericControls:ClickSelectTextBox2 TextAlignment="Right" x:Name="_tbScaleX" Background="Transparent" />
		</Border>
		<Border>
			<GenericControls:ClickSelectTextBox2 TextAlignment="Right" x:Name="_tbScaleY" Background="Transparent" />
		</Border>
		<Border>
			<GenericControls:ClickSelectTextBox2 TextAlignment="Right" x:Name="_tbRotation" Background="Transparent" />
		</Border>
    </UniformGrid>
</UserControl>
