<styles:TkWindow x:Class="ActEditor.Core.WPF.EditorControls.QuickPreviewPaletteSheet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
        xmlns:paletteEditor="clr-namespace:PaletteEditor;assembly=PaletteEditor">
	<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MinWidth="300" MinHeight="400" SnapsToDevicePixels="True" UseLayoutRounding="True">
		<ScrollViewer.Background>
			<ImageBrush x:Name="_imBrush" ImageSource="../../../Resources/background.png" TileMode="Tile" Viewport="0,0,16,16" ViewportUnits="Absolute" RenderOptions.BitmapScalingMode="NearestNeighbor" />
		</ScrollViewer.Background>
		<Grid>
			<Rectangle Fill="#90FFFFFF" />
			<Image x:Name="_previewImage" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor">
			</Image>
		</Grid>
	</ScrollViewer>
</styles:TkWindow>
