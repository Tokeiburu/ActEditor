<Styles:TkWindow x:Class="ActEditor.Core.WPF.Dialogs.SpriteConverterFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
        xmlns:TokeiLibrary="clr-namespace:TokeiLibrary;assembly=TokeiLibrary"
		SizeToContent="WidthAndHeight"
        Background="{StaticResource TabItemBackground}" Foreground="{StaticResource TextForeground}">
	<Styles:TkWindow.Resources>
		<Style TargetType="{x:Type RadioButton}" >
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type RadioButton}">
						<Border Name="BorderSelected" BorderThickness="1" BorderBrush="White" CornerRadius="3" >
							<BulletDecorator Background="White" Cursor="Hand" Margin="3 0 0 0">
								<BulletDecorator.Bullet>
									<CheckBox Name="Box" />
								</BulletDecorator.Bullet>

								<TextBlock Margin="3,1,0,0" Foreground="#FF3E3E3E" FontFamily="Calibri" FontSize="12">
                                <ContentPresenter />
								</TextBlock>
							</BulletDecorator>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsChecked" Value="true">
								<Setter TargetName="Box" Property="IsChecked" Value="True"/>
							</Trigger>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="BorderSelected" Property="BorderBrush" Value="Gainsboro" />
							</Trigger>

						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Styles:TkWindow.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<StackPanel Grid.Row="0">
				<TextBlock TextWrapping="Wrap" Name="_description" Margin="3" />
				<DockPanel>
					<TextBlock Text="Transparency pixel" VerticalAlignment="Center" Margin="3" />
					<ComboBox Name="_cbTransparency" Width="160" HorizontalAlignment="Left" Margin="3">
						<ComboBoxItem Content="None" />
						<ComboBoxItem Content="Use pixel index 0" />
						<ComboBoxItem Content="Use pixel pink (#FF00FF)" />
						<ComboBoxItem Content="Use first pixel in the image" />
						<ComboBoxItem Content="Use last pixel in the image" />
					</ComboBox>
				</DockPanel>
				<CheckBox Name="_cbDithering" Content="Dither indexed images (change the image to blend unexisting colors)" Margin="3" VerticalAlignment="Center" />
			</StackPanel>
			<Border Grid.Row="1" BorderBrush="#6F6F6F" CornerRadius="3" BorderThickness="2" Margin="3">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition Width="2" />
						<ColumnDefinition />
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Grid Grid.Row="0" Grid.Column="0">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<TextBlock Text="Original image" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
								<ScrollViewer Grid.Row="1" Name="_sv0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageReal" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Rectangle Fill="#6F6F6F" Width="2" Grid.Column="1" Grid.RowSpan="2" />

					<Grid Grid.Row="0" Grid.Column="2">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbOriginalPalette" VerticalAlignment="Center" Margin="5" Checked="_rb_Checked" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Original palette" />
								<ScrollViewer Grid.Row="1" Name="_sv1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageOriginal" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="0" Grid.Column="3">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbMatch" Checked="_rb_Checked" Grid.Row="0" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Match palette" />
								<ScrollViewer Grid.Row="1" Name="_sv3" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageClosestMatch" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="0" Grid.Column="4">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbBgra32" Checked="_rb_Checked" Grid.Row="0" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Convert Bgra32" />
								<ScrollViewer Grid.Row="1" Name="_sv2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageToBgra32" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="1" Grid.Column="0">
						<Border BorderThickness="2" BorderBrush="Transparent" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<TextBlock Text="New palette" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
								<Image Grid.Row="1" Name="_imagePalette" Grid.Column="3" Grid.RowSpan="3" MinWidth="120" MinHeight="120" Margin="5 0 5 5" />
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="1" Grid.Column="2">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbMerge" Checked="_rb_Checked" Grid.Row="0" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Merge (original)" />
								<ScrollViewer Grid.Row="1" Name="_sv4" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageMergePalette" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="1" Grid.Column="3">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbMergeOctRgb" Checked="_rb_Checked" Grid.Row="0" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Merge (oct RGB)" />
								<ScrollViewer Grid.Row="1" Name="_sv5" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageMergePaletteOctRgb" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>

					<Grid Grid.Row="1" Grid.Column="4">
						<Border BorderThickness="2" CornerRadius="2">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="auto" />
									<RowDefinition />
								</Grid.RowDefinitions>
								<CheckBox Name="_rbMergeOctLab" Checked="_rb_Checked" Grid.Row="0" VerticalAlignment="Center" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center" Content="Merge (oct Lab)" />
								<ScrollViewer Grid.Row="1" Name="_sv6" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" MinWidth="120" MinHeight="120" Margin="5 0 5 5">
									<ScrollViewer.Background>
										<ImageBrush ImageSource="../../../Resources/background.png" TileMode="Tile" Stretch="None" Viewport="0,0,16,16" ViewportUnits="Absolute" />
									</ScrollViewer.Background>
									<Image Name="_imageMergePaletteOctLab" />
								</ScrollViewer>
							</Grid>
						</Border>
					</Grid>
				</Grid>
			</Border>
		</Grid>
		<Grid TokeiLibrary:WpfProperties.IsDraggable="True" Grid.Row="1" Height="40" Background="{DynamicResource UIDialogBackground}">
			<DockPanel HorizontalAlignment="Right" Margin="0 0 3 0" Grid.Column="1">
				<CheckBox Name="_cbRepeat" Checked="_cbRepeat_Checked" Unchecked="_cbRepeat_Unchecked" Content="Apply for all items" Margin="3" VerticalAlignment="Center" />
				<Button  Name="_buttonOk" Content="OK" Height="24" Margin="3" Width="100" Click="_buttonOk_Click" />
				<Button  Name="_buttonCancel" Content="Cancel" Height="24" Margin="3" Width="100" Click="_buttonCancel_Click" />
			</DockPanel>
		</Grid>
	</Grid>
</Styles:TkWindow>
