<Styles:TkWindow x:Class="ActEditor.Core.WPF.Dialogs.ScriptErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Styles="clr-namespace:TokeiLibrary.WPF.Styles;assembly=TokeiLibrary"
        xmlns:ListView="clr-namespace:TokeiLibrary.WPF.Styles.ListView;assembly=TokeiLibrary"
        xmlns:TokeiLibrary="clr-namespace:TokeiLibrary;assembly=TokeiLibrary"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Background="{StaticResource TabItemBackground}" Foreground="{StaticResource TextForeground}">
    <Grid Name="_mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="_gridRowTextEditor" Height="auto" MinHeight="250" />
            <RowDefinition Height="150" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="*" MinWidth="400" />
		</Grid.ColumnDefinitions>
		<ListView Name="_lvFiles" Grid.Row="0" Grid.Column="0" SelectionChanged="_lvFiles_SelectionChanged" BorderThickness="0" FocusVisualStyle="{x:Null}" ListView:ListViewExtensions.IsGridSortable="False" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
			<ListView.ContextMenu>
				<ContextMenu>
					<Styles:TkMenuItem x:Name="_miSelect" Click="_miSelect_Click" HeaderText="Select in explorer" IconPath="arrowDown.png" />
					<Styles:TkMenuItem x:Name="_miOpen" Click="_miOpen_Click" HeaderText="Open file" IconPath="open.png" />
				</ContextMenu>
			</ListView.ContextMenu>
		</ListView>
		<avalonedit:TextEditor
				    Grid.Row="0"
                    Grid.Column="1"
					Name="_textEditor"
					FontFamily="Consolas"
					ShowLineNumbers="True">
		</avalonedit:TextEditor>
		<Grid Name="_sp" Grid.Row="1" Grid.ColumnSpan="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Label Background="{StaticResource UIThemeScriptRunnerConsoleErrorBrush}" Content="Error console" />
			<ListView Grid.Row="1" MouseDoubleClick="_listView_MouseDoubleClick" SelectionChanged="_listView_SelectionChanged" BorderThickness="0 1 0 1" ListView:ListViewExtensions.IsGridSortable="True" VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="_listView" />
		</Grid>
		<Grid Name="_gridActionPresenter" TokeiLibrary:WpfProperties.IsDraggable="True" Grid.Row="2" Grid.ColumnSpan="2" Height="50" Background="{DynamicResource UIDialogBackground}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
			<DockPanel HorizontalAlignment="Right" Margin="0 0 3 0" Grid.Column="1">
				<Button Name="_buttonCancel" Click="_buttonCancel_Click" Content="Close" Height="24" Margin="3" MinWidth="100" />
            </DockPanel>
        </Grid>
    </Grid>
</Styles:TkWindow>
